@model List<Cart>

@if (Model?.Count() > 0 )
{
    <span id="totalItemsInCart" class="d-none">@ViewBag.CountItems</span>
    <span id="totalItemsCost" class="d-none">@ViewBag.CartTotal.ToString("C")</span>


    @if (Model?.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="product-@item.Id">

                <div class="col-12 p-1 ml-0 mr-0 mb-2 rounded d-flex cart-row align-items-center">

                    <div class="cart-image">
                        <div class="rounded border mr-2">
                            <img src="@item.Photo" alt="@item.Name" />
                        </div>
                    </div>

                    <div style="width: 100%">
                        <h6 class="card-title mb-1 p-0">@item.Name</h6>
                        <span class="text-dark float-left">@item.CartQuantity &times; @item.Price.ToString("C")</span>
                        <div class="float-right mr-1">
                            <i class="fas fa-minus-circle cart-action mr-1" onclick="RemoveFromCart('@item.Id')"></i>
                            <i class="fas fa-plus-circle cart-action mr-1" onclick="AddToCart('@item.Id', false)"></i>
                            <i class="far fa-trash-alt cart-action" onclick="DeleteFromCart('@item.Id')"></i>
                        </div>
                    </div>

                </div>

            </div>
        }
    }
}
else
{
    <p>Cart empty</p>
}
