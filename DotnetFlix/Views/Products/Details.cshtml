@{
}
@model Product
@{
    ViewData["Title"] = "Details";
}

@* Product-to-cart popup modal message *@
<partial name="_CartMessagePartial" />

<div class="mt-4">
    <a href="#" onclick="history.back()"><i class="fas fa-angle-left"></i> Back to products</a>
</div>

<div class="row mt-4">

    <div class="col-md-12 col-lg-6 text-center">
        <div class="p-2 rounded shadow border">
            <img src="@Model.Photo" alt="@Model.Name" class="img-fluid rounded" style="max-width: 100%; height: auto;" />
        </div>
    </div>

    <div class="col-md-12 col-lg-6 mt-3">

        <h3>@Model.Name</h3>
        <p class="lead">@Model.Description</p>

        <div class="d-flex justify-content-between">
            <div class="form-inline">
                <h3 class="p-0 m-0 mr-3 ">@Model.Price.ToString("C")</h3>
                <span>
                    In stock:
                    @if (Model.Quantity > 0)
                    {
                        <i class="fas fa-check text-success"></i>
                    }
                    else
                    {
                        <i class="fas fa-times text-danger align-middle"></i>
                    }
                </span>
            </div>
            <button class="btn btn-warning font-weight-bold text-uppercase text-white" onclick="AddToCart('@Model.Id')" style="font-size: 0.8rem">Add to cart <i class="fas fa-angle-up"></i></button>
        </div>

        <hr />

        <p>@Model.Details</p>

    </div>

</div>